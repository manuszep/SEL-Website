{% extends 'base.html.twig' %}

{% block header %}
    <header class="page-header has-block angle-intro">
        <div class="wrapper">
            <h1>Changement de mot de passe</h1>
        </div>
    </header>
{% endblock %}

{% block body %}
    {% trans_default_domain 'FOSUserBundle' %}
    <section>
        <div class="wrapper">
            {{ form_start(form, { 'action': path('fos_user_change_password'), 'attr': { 'class': 'small-form' } }) }}
            <fieldset>
                <div class="form-row">
                    {{ form_label(form.current_password) }}
                    {{ form_widget(form.current_password) }}
                    {{ form_errors(form.current_password) }}
                </div>
                <div class="form-row">
                    {{ form_widget(form.plainPassword) }}
                    {{ form_errors(form.plainPassword) }}
                </div>
            </fieldset>
            <div class="form-actions">
                <button class="main" type="submit" id="_submit" name="_submit">{{ 'change_password.submit'|trans }}</button>
            </div>

            {{ form_end(form) }}
        </div>
    </section>
{% endblock %}
