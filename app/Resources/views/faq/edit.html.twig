{% extends 'base.html.twig' %}

{% block header %}
    <header class="page-header angle-intro inline-heading">
        <div class="wrapper">
            <h1>Modifier une question</h1>

            {{ form_start(delete_form, {'attr': {'class': 'delete-form'}}) }}
            <button type="submit" class="btn-delete" data-confirm-message="Êtes-vous sûr de vouloir supprimer cette question&nbsp;?">{{ icons.icon('trash', 'Supprimer') }}</button>
            {{ form_end(delete_form) }}
        </div>
    </header>
{% endblock %}

{% block body %}
    <section class="edit-form">
        <div class="wrapper">
            {{ form_start(form, {'attr': {'class': 'medium-form'}}) }}
            <fieldset>
                <div class="form-row">
                    {{ form_label(form.question) }}
                    {{ form_widget(form.question) }}
                    {{ form_errors(form.question) }}
                </div>
                <div class="form-row">
                    {{ form_label(form.answer) }}
                    {{ form_widget(form.answer) }}
                    {{ form_errors(form.answer) }}
                </div>
                <div class="form-row">
                    {{ form_label(form.type) }}
                    {{ form_widget(form.type) }}
                    {{ form_errors(form.type) }}
                </div>
            </fieldset>

            <div class="form-actions">
                {{ form_widget(form.save) }}
                <a href="{{ path('faq_index') }}" class="btn">Retour à la liste</a>
            </div>

            {{ form_end(form) }}
        </div>
    </section>
{% endblock %}
