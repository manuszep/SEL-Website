<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />

        <link rel="stylesheet" type="text/css" href="{{ asset('css/main.css') }}" />
        {% block stylesheets %}{% endblock %}
    </head>
    <body>
        <div>
            {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                {{ 'layout.logged_in_as'|trans({'%username%': app.user.username}, 'FOSUserBundle') }} |
                <a href="{{ path('fos_user_security_logout') }}">
                    {{ 'layout.logout'|trans({}, 'FOSUserBundle') }}
                </a>
            {% else %}
                <a href="{{ path('fos_user_security_login') }}">{{ 'layout.login'|trans({}, 'FOSUserBundle') }}</a>
            {% endif %}
        </div>

        {% for type, messages in app.session.flashBag.all %}
            {% for message in messages %}
                <div class="{{ type }}">
                    {{ message|trans({}, 'FOSUserBundle')|raw }}
                </div>
            {% endfor %}
        {% endfor %}

        <ul>
            <li><a href="/">Accueil</a></li>
            <li><a href="/le-sel-athois">Le SEL Athois</a></li>
            <li><a href="/articles">La vie du SEL</a></li>
            <li><a href="{{ path('service_index') }}">Services</a></li>
            <li><a href="/agenda">Agenda</a></li>
            <li><a href="/contact">Contact</a></li>
            <li><a href="/faq">Questions fr√©quentes</a></li>
        </ul>
        {% block fos_user_content %}{% endblock fos_user_content %}
        {% block body %}{% endblock %}
        <h4>Ajouter</h4>
        <ul>
            <li><a href="{{ path('service_new') }}">Service</a></li>
            <li><a href="/agenda/ajouter">&Eacute;venement</a></li>
            <li><a href="/articles/ajouter">Article</a></li>
            <li><a href="/echanges/ajouter">&Eacute;change</a></li>
            <li><a href="{{ path('user_new') }}">Utilisateur</a></li>
        </ul>

        {% block javascripts %}{% endblock %}
    </body>
</html>
