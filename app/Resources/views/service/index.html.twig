{% extends 'base.html.twig' %}

{% block header %}
    <header class="page-header has-block inline-heading angle-intro angle-reverse">
        <div class="wrapper">
            <h1>Les services</h1>
            {{ icons.iconlink('print', 'Imprimer', path('service_index', { 'print_list': 1 }), 'btn') }}
            <div class="filters header-block service-filters">
                <a href="#" class="filter-toggle">Filtrer</a>
                <form method="get" action=".">
                    {{ form_rest(filter) }}
                    <button id="filter_submit" type="submit" name="submit-filter">Filtrer</button>
                </form>
            </div>
        </div>
    </header>
{% endblock %}

{% block body %}
    <section class="service-list">
        <div class="wrapper">
            <div class="grid masonry">
                {% for service in services %}
                    {% include 'service/serviceItem.html.twig' with {'service': service} %}
                {% endfor %}
            </div>
            {{ knp_pagination_render(services) }}
        </div>
    </section>
{% endblock %}
