{% extends 'base.html.twig' %}

{% block body %}
    <!--
        TODO: Use user.locked variable to grey out locked user rows
        TODO: Put user.lastLogin|date("d/m/Y H:i:s") in a tooltip
    -->
    <div class="wrapper">
        <h1>Users list</h1>

        <table>
            <thead>
            <tr>
                <th>Nom d'utilisateur</th>
                <th>Email</th>
                <th>Noeuds</th>
                <th>Téléphone</th>
                <th>Adresse</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for user in users %}
            <tr>
                <td><a href="{{ path('user_show', { 'id': user.id }) }}">{{ user.username }}</a></td>
                <td><a href="mailto:{{ user.email }}">{{ user.email }}</a></td>
                <td>{{ user.balance }}</td>
                <td>{{ user.phone }}{% if user.phone and user.mobile %}<br />{% endif %}{{ user.mobile }}</td>
                <td>{{ user.address|nl2br }}</td>
                <td>
                    <ul class="table-actions">
                        <li>
                            <a href="{{ path('user_show', { 'id': user.id }) }}">afficher</a>
                        </li>
                        <li>
                            <a href="{{ path('user_edit', { 'id': user.id }) }}">modifier</a>
                        </li>
                        {% if app.user and (app.user.hasRole('ROLE_SUPER_ADMIN') or app.user.hasRole('ROLE_COCO')) %}
                            {%  if app.user.id != user.id %}
                                <li>
                                    {% if not user.locked %}
                                        <a href="{{ path('user_disable', { 'id': user.id }) }}">désactiver</a>
                                    {% else %}
                                        <a href="{{ path('user_enable', { 'id': user.id }) }}">activer</a>
                                    {% endif %}
                                </li>
                            {% endif %}
                            <li>
                                {% if user.hasRole('ROLE_COCO') %}
                                    <a href="{{ path('user_disable_coco', { 'id': user.id }) }}">désactiver COCO</a>
                                {% else %}
                                    <a href="{{ path('user_enable_coco', { 'id': user.id }) }}">activer COCO</a>
                                {% endif %}
                            </li>
                        {% endif %}
                    </ul>
                </td>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}