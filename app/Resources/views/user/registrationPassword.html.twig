{% extends 'base.html.twig' %}

{% block header %}
    <header class="page-header angle-intro">
        <div class="wrapper">
            <h1>Nouveau mot de passe</h1>
        </div>
    </header>
{% endblock %}

{% block body %}
<section class="edit-form">
    <div class="wrapper">
        <p class="lead text-center">Bienvenue sur le site du SEL.<br />Pour activer votre compte, veuillez choisir un mot de passe.</p>
        <p class="text-center">Votre nom d'utilisateur est <strong>{{ username }}</strong>.</p>

        {{ form_start(form, {'attr': {'class': 'small-form'}}) }}
        <fieldset>
            <div class="form-row">
                {{ form_widget(form.plainPassword) }}
                {{ form_errors(form.plainPassword) }}
            </div>
        </fieldset>

        {{ form_end(form) }}
    </div>
</section>
{% endblock %}
