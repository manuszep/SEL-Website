{% if pageCount > 1 %}
    <nav class="pagination">
        <ul>
        {% if first is defined and current != first %}
            <li class="first">
                <a class="pagination-link" href="{{ path(route, query|merge({(pageParameterName): first})) }}">{{ 'First'|trans }}</a>
            </li>
        {% endif %}
        {% if previous is defined %}
            <li class="previous">
                <a class="pagination-link" href="{{ path(route, query|merge({(pageParameterName): previous})) }}">&laquo; {{ 'Previous'|trans }}</a>
            </li>
        {% else %}
            <li class="previous unavailable">
                <span class="pagination-link">
                    &laquo; {{ 'Previous'|trans }}
                </span>
            </li>
        {% endif %}

        {% if startPage > 1 %}
            <li>
                <a class="pagination-link" href="{{ path(route, query|merge({(pageParameterName): 1})) }}">1</a>
            </li>
            {% if startPage == 3 %}
                <li>
                    <a class="pagination-link" href="{{ path(route, query|merge({(pageParameterName): 2})) }}">2</a>
                </li>
            {% elseif startPage != 2 %}
                <li class="page unavailable">
                    <span class="pagination-link">&hellip;</span>
                </li>
            {% endif %}
        {% endif %}

        {% for page in pagesInRange %}
            {% if page != current %}
                <li class="page">
                    <a class="pagination-link" href="{{ path(route, query|merge({(pageParameterName): page})) }}">
                        {{ page }}
                    </a>
                </li>
            {% else %}
                <li class="page current">
                    <span class="pagination-link">{{ page }}</span>
                </li>
            {% endif %}

        {% endfor %}

        {% if pageCount > endPage %}
            {% if pageCount > (endPage + 1) %}
                {% if pageCount > (endPage + 2) %}
                    <li class="page unavailable">
                        <span class="pagination-link">&hellip;</span>
                    </li>
                {% else %}
                    <li>
                        <a class="pagination-link" href="{{ path(route, query|merge({(pageParameterName): (pageCount - 1)})) }}">
                            {{ pageCount -1 }}
                        </a>
                    </li>
                {% endif %}
            {% endif %}
            <li>
                <a class="pagination-link" href="{{ path(route, query|merge({(pageParameterName): pageCount})) }}">{{ pageCount }}</a>
            </li>
        {% endif %}

        {% if next is defined %}
            <li class="next">
                <a class="pagination-link" href="{{ path(route, query|merge({(pageParameterName): next})) }}">
                    {{ 'Next'|trans }} &nbsp;&raquo;
                </a>
            </li>
        {% else %}
            <li class="next unavailable">
                <span class="pagination-link">
                    {{ 'Next'|trans }} &nbsp;&raquo;
                </span>
            </li>
        {% endif %}


            {% if last is defined and current != last %}
            <li class="first">
                <a class="pagination-link" href="{{ path(route, query|merge({(pageParameterName): last})) }}">{{ 'Last'|trans }}</a>
            </li>
        {% endif %}
        </ul>
    </nav>
{% endif %}